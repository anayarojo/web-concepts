@import "../commons/variables.styl"

.shape-image
    display: block;
    width: 100%;
    height 100%;
    border-radius: 50%;
    &:after
        display: block;
        content: "";
        position: relative;
        width: 100%;
        height 100%;
        border-radius: 50%;
        margin: 50px 0 0 50px 
        background-color: red
    &.shape-image-1
        background-color: $color-1
    &.shape-image-2
        background-color: $color-2
    &.shape-image-3
        background-color: $color-3
    &.shape-image-4
        background-color: $color-4
    &.shape-image-5
        background-color: $color-5


